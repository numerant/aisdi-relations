
int Database::findEmail(string messageId)
{
	if(emailVector.size()==0)
		return -1;
	int position=emailVector.size()/2;
	int range=emailVector.size()/2;
	while(range>=1){
		range/=2;
		if(messageId.compare(emailVector[position]->getID())==0)
			return position;
		if(messageId.compare(emailVector[position]->getID())>0)
			position+=range;
		else
			position-=range;
	}
	if(messageId.compare(emailVector[position]->getID())==0)
		return position;
	else
		return -1;
}
